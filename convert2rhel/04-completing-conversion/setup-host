while ! ping -c 1 -W 1 converted; do echo "Waiting for VM - network interface might be down..."; sleep 10; done

TMUX='' tmux new-session -d -s 'converted' 'ssh -o "StrictHostKeyChecking no" root@converted; clear' > /dev/null 2>&1
tmux set -g pane-border-status top
tmux setw -g pane-border-format ' #{pane_index} #{pane_current_command}'
